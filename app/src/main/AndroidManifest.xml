<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kamran.login">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BitacoraServicio" />
        <activity android:name=".Signature" />
        <activity android:name=".FotoUnidad" />
        <activity
            android:name=".Configuraciones_Activitie"
            android:label="@string/title_activity_configuraciones__activitie"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kamran.login.MainActivity" />
        </activity>
        <activity android:name=".Inventario" />
        <activity android:name=".parametrosinventarios" />
        <activity android:name=".PDFReader" />
        <activity
            android:name=".compras"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".parametroscardex" />
        <activity android:name=".buscaproducto" />
    </application>

</manifest>