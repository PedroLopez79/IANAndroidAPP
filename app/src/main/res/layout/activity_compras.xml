            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtdescproducto"
            app:layout_constraintTop_toBottomOf="@+id/txtidproducto"
            app:layout_constraintLeft_toLeftOf="@+id/txtidproducto"
            android:textSize="12sp"
            android:textStyle="normal|bold" />

        <ImageButton
            android:layout_width="44dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/btnagregarproducto"
            android:layout_marginTop="280dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="320dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.95" />

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="58dp"
            app:srcCompat="@android:drawable/ic_search_category_default"
            android:id="@+id/btnbuscarproducto"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="280dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:id="@+id/spcantidad"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintLeft_toLeftOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="264dp"
            android:text="-------------------------------------------------------------------------------------"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="54dp"
            app:srcCompat="@drawable/ic_menu_save_color2"
            android:id="@+id/btnguardar"
            android:layout_marginStart="296dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="448dp"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:scaleType="fitCenter" />

        <ImageButton
            app:srcCompat="@drawable/stat_notify_more_color1"
            android:id="@+id/btnnuevo"
            app:layout_constraintRight_toLeftOf="@+id/btnguardar"
            app:layout_constraintBottom_toBottomOf="@+id/btnguardar"
            app:layout_constraintTop_toTopOf="@+id/btnguardar"
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:scaleType="fitCenter"
            app:layout_constraintVertical_bias="0.55" />

        <ListView
            android:layout_width="328dp"
            android:layout_height="104dp"
            android:layout_marginTop="344dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/lvdetalleproductos" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
