<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parametrosinventarios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.kamran.login.parametroscardex"
    android:background="@drawable/background2">

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/textView1"
        android:textStyle="normal|bold" />

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:textStyle="normal|bold" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="REPORTE CARDEX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textStyle="normal|bold"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp" />

        <TextView
            android:text="ALMACEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtalmacen"
            android:layout_above="@+id/btnaceptarcardex"
            android:layout_alignRight="@+id/obtenfechafinal"
            android:layout_alignEnd="@+id/obtenfechafinal"
            android:layout_weight="2.02"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="312dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="10sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_height="wrap_content"
            android:id="@+id/txtfechaini"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/txtfechafinal"
            android:layout_alignStart="@+id/txtfechafinal"
            android:layout_weight="2.02"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/obtenfechainicio"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="92dp" />

        <Button
            android:text="Fecha Inicial"
            android:layout_width="98dp"
            android:id="@+id/obtenfechainicio"
            android:layout_below="@+id/txtfechaini"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="2.02"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:textSize="10sp"
            android:layout_height="48dp"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:text="Fecha Final"
            android:layout_width="99dp"
            android:id="@+id/obtenfechafinal"
            android:layout_below="@+id/obtenfechainicio"
            android:layout_alignRight="@+id/obtenfechainicio"
            android:layout_alignEnd="@+id/obtenfechainicio"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="2.02"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="192dp"
            android:textSize="10sp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:text="TextView"
            android:layout_height="21dp"
            android:id="@+id/txtfechafinal"
            android:textStyle="normal|bold"
            android:layout_above="@+id/obtenfechafinal"
            android:layout_alignLeft="@+id/btnaceptarcardex"
            android:layout_alignStart="@+id/btnaceptarcardex"
            android:layout_weight="2.02"
            android:layout_width="92dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/obtenfechafinal"
            android:layout_marginTop="208dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:text="Aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnaceptarcardex"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.06"
            android:layout_marginStart="264dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="264dp"
            android:layout_marginTop="368dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:layout_height="68dp"
            android:id="@+id/spinnercardex"
            android:layout_width="260dp"
            android:textSize="10sp"
            android:spinnerMode="dropdown"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_marginTop="280dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/txtalmacen" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
